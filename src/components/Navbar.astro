<header class="bg-pantone-281 shadow-sm fixed top-0 left-0 w-full z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <img
            alt="Logo"
            class="h-20 w-auto"
            width="50"
            height="50"
            src="/img/Logo.svg"
          />
        </a>
      </div>

      <div class="hidden md:flex md:items-center md:space-x-8">
        <a
          href="/"
          class="text-white hover:text-blue-200 px-3 py-2 text-sm font-medium"
          >Inicio</a
        >
        <a
          href="/acerca"
          class="text-white hover:text-blue-200 px-3 py-2 text-sm font-medium"
          >Sobre Nosotros</a
        >
        <a
          href="/servicios"
          class="text-white hover:text-blue-200 px-3 py-2 text-sm font-zmedium"
          >Servicios</a
        >
        <a
          href="/evaluacion"
          class="text-white hover:text-blue-200 px-3 py-2 text-sm font-medium"
          >Evaluación</a
        >
        <a
          href="/faq"
          class="text-white hover:text-blue-200 px-3 py-2 text-sm font-medium"
          >FAQ</a
        >
        <a
          href="/contacto"
          class="text-white hover:text-blue-200 px-3 py-2 text-sm font-medium"
          >Contacto</a
        >
      </div>

      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          type="button"
          class="text-white hover:text-blue-200"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Abrir menú principal</span>

          <svg
            class="h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="hidden lg:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 bg-pantone-281 shadow-lg">
      <a
        href="/"
        class="text-white hover:bg-blue-800 block px-3 py-2 text-base font-medium"
        >Inicio</a
      >
      <a
        href="/acerca"
        class="text-white hover:bg-blue-800 block px-3 py-2 text-base font-medium"
        >Sobre Nosotros</a
      >
      <a
        href="/servicios"
        class="text-white hover:bg-blue-800 block px-3 py-2 text-base font-medium"
        >Servicios</a
      >
      <a
        href="/evaluacion"
        class="text-white hover:bg-blue-800 block px-3 py-2 text-base font-medium"
        >Evaluación</a
      >
      <a
        href="/faq"
        class="text-white hover:bg-blue-800 block px-3 py-2 text-base font-medium"
        >FAQ</a
      >
      <a
        href="/contacto"
        class="text-white hover:bg-blue-800 block px-3 py-2 text-base font-medium"
        >Contacto</a
      >
    </div>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", () => {
        const expanded =
          mobileMenuButton.getAttribute("aria-expanded") === "true";
        mobileMenuButton.setAttribute("aria-expanded", (!expanded).toString());

        mobileMenu.classList.toggle("hidden");
      });

      document.addEventListener("click", (event) => {
        if (
          !mobileMenu.contains(event.target as Node) &&
          !mobileMenuButton.contains(event.target as Node) &&
          !mobileMenu.classList.contains("hidden")
        ) {
          mobileMenu.classList.add("hidden");
          mobileMenuButton.setAttribute("aria-expanded", "false");
        }
      });
    }
  });
</script>
