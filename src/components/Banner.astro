---
interface Props {
  title: string;
  imageSrc: string;
  imageAlt: string;
}
const { title, imageSrc, imageAlt } = Astro.props;
---

<div class="relative h-64 md:h-80 bg-gray-200 overflow-hidden rounded-lg">
  <img
    src={imageSrc}
    alt={imageAlt}
    class="absolute inset-0 w-full h-full object-cover filter brightness-75"
    loading="eager"
  />

  <div class="absolute inset-0 flex items-center justify-center p-4">
    <h1 class="text-4xl md:text-5xl font-bold text-white text-center tracking-wide leading-tight break-words">
      {title}
    </h1>
  </div>
</div>
